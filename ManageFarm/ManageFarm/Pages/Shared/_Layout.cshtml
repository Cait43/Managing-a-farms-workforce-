﻿
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ManageFarm</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ManageFarm.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined">
</head>
<body>
    <header>
        <div class="top-bar">
            <img src="/images/LOGO WITH NAME-Photoroom.png" alt="Logo" class="logo" />
            <span class="site-name">Spinney's Farm</span>
        </div>
        <nav class="nav-bar">
            <a class="nav-link text-light" asp-page="/Index">
                <span class="material-symbols-outlined">home</span> Home
            </a>
            <a class="nav-link text-light" asp-page="/Weather">
                <span class="material-symbols-outlined">cloud</span> Weather
            </a>
            <a class="nav-link text-light" asp-page="/Map">
                <span class="material-symbols-outlined">location_on</span> Map
            </a>
            <a class="nav-link text-light" asp-page="/Workers">
                <span class="material-symbols-outlined">groups</span> Workers
            </a>
            <a class="nav-link text-light" asp-page="/Privacy">
                <span class="material-symbols-outlined">policy</span> Privacy
            </a>
            <a class="nav-link text-light" asp-page="/Contact">
                <span class="material-symbols-outlined">alternate_email</span> Contact
            </a>
            <a class="nav-link text-light" asp-page="/Staff">
                <span class="material-symbols-outlined">table_view</span>
                Staff Database
            </a>
            <a class="nav-link text-light" asp-page="/Fields">
                <span class="material-symbols-outlined">table_view</span>
                Field Database
            </a>
            <a class="nav-link text-light" asp-page="/Machines">
                <span class="material-symbols-outlined">table_view</span>
                Machine Database
            </a>
            <a class="nav-link text-light" asp-page="/Assignments">
                <span class="material-symbols-outlined">table_view</span>
                Assignment Database
            </a>
        </nav>
    </header>

    <div class="page-wrapper">
        <div class="container main-content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="site-footer">
            <div class="footer-inner">
                <div class="footer-content">
                    <p>&copy; 2025 Spinney's Farm'. All rights reserved.</p>
                    <nav>
                        <a asp-page="/Privacy">Privacy Policy</a> |
                        <a asp-page="/Contact">Contact</a>
                    </nav>
                </div>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>