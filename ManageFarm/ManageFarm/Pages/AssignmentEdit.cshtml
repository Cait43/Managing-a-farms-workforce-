@page
@model ManageFarm.Pages.AssignmentEditModel

<h2>Edit Assignment</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Assignment.AssignmentId"></label>
        <input asp-for="Assignment.AssignmentId" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Assignment.FieldId"></label>
        <select asp-for="Assignment.FieldId" class="form-control" asp-items="@(new SelectList(Model.Fields, "FieldId", "FieldId"))">
            <option value="">Select a field</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Assignment.StaffId"></label>
        <select asp-for="Assignment.StaffId" class="form-control" asp-items="@(new SelectList(Model.StaffList, "StaffId", "Name"))">
            <option value="">Select a staff member</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Assignment.MachineId"></label>
        <select asp-for="Assignment.MachineId" class="form-control" asp-items="@(new SelectList(Model.Machines, "MachineId", "MachineId"))">
            <option value="">Select a machine</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Assignment.Task"></label>
        <input asp-for="Assignment.Task" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<a href="/Assignments" class="btn btn-secondary">Back to List</a>
