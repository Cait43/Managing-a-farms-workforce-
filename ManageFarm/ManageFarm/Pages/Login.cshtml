@page
@model LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: gray;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .card {
            background-color: lightgray;
            border-radius: 8px;                 
            overflow: hidden;
            width: 100%;
            max-width: 400px;
    
        }

        .header {
            background-color: #5f865d;
            padding: 20px;
            text-align: center;
            color: black;
            font-size: 28px;
            font-weight: bold;
        }

        .form-container {
            padding: 30px;
        }

        input[type="password"] {
            width: 90%;
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 6px;
        }

        button {
            width: 100%;
            padding: 10px;
            background-color: #2c2c2c;
            color: white;
            border-radius: 6px;
            font-size: 16px;
            cursor: pointer;
        }

            button:hover  {
                background-color:  #1f1f1f;
            }

        .error-message {
            color: red;
            font-size: 14px;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="card">
        <div class="header">Welcome</div>
        <div class="form-container">
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="error-message">@Model.ErrorMessage</div>
            }

            <form method="post">
                <label for="Password">Password</label>
                <input type="password" id="Password" name="Password" required />

                <button  type="submit">Sign In</button>
            </form>
        </div>
    </div>
</body>
</html>

