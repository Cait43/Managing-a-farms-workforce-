@page
@model ManageFarm.Pages.EditButtonModel
@{
    ViewData["Title"] = "Edit Staff";
}

<h2>Edit Staff</h2>

<form method="post">
    <input type="hidden" asp-for="Staff.StaffId" />
    <div>
        <label asp-for="Staff.Name"></label>
        <input asp-for="Staff.Name" />
    </div>
    <div>
        <label asp-for="Staff.ContactInfo"></label>
        <input asp-for="Staff.ContactInfo" />
    </div>
    <div>
        <label asp-for="Staff.Role"></label>
        <input asp-for="Staff.Role" />
    </div>
    <div>
        <label asp-for="Staff.Pay"></label>
        <input asp-for="Staff.Pay" />
    </div>
    <button type="submit">Save</button>
</form>
